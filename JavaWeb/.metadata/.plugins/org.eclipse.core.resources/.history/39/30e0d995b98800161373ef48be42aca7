  <body>
  		<span id="second" style="color: red">5</span>秒后跳转到百度
  </body>
  
  <script type="text/javascript">
  	var time = 5;
  	var timer = setInterval(function(){
  		var second = document.getElementByid("second");
  		  	alert(second);
  		if(time>0){
	  		second.innerHTML = time;
	  		time--;
  		}
  		else{
  			location.href("https://www.baidu.com/");
  		}
  	}, 1000);
  </script>
  
